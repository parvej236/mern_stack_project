<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mini Whatsapp</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container py-4">
    <div class="text-center mb-4">
      <h1 class="fw-bold">Mini Chat System</h1>
      <p class="lead text-muted">Crud application with Node.js, EJS, and Bootstrap</p>
    </div>

    <div class="d-flex justify-content-end mb-3">
      <form action="/chats/new" method="GET">
        <button class="btn btn-primary">
          <i class="bi bi-plus-circle"></i> New Chat
        </button>
      </form>
    </div>

    <div class="list-group">
      <% for(let chat of chats) { %>
        <div class="list-group-item <%= chat.from === 'You' ? 'list-group-item-primary' : 'list-group-item-light' %> mb-2 rounded">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <div>
              <strong><%= chat.from %></strong> â†’ <%= chat.to %>
            </div>
            <small class="text-muted"><i class="bi bi-clock"></i> <%= chat.created_at.toString().split(" ").slice(0,4).join("-") %></small>
          </div>
          <p class="mb-2"><%= chat.msg %></p>
          <div class="d-flex gap-2">
            <form method="get" action="/chat/<%= chat._id %>/edit">
              <button class="btn btn-sm btn-warning">
                <i class="bi bi-pencil-square"></i> Edit
              </button>
            </form>
            <form action="/chats/<%= chat._id %>?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-danger">
                <i class="bi bi-trash"></i> Delete
              </button>
            </form>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
