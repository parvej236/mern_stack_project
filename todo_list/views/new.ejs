<%- include('partials/header') %>

<div class="card shadow p-4">
  <h1 class="mb-4"><i class="bi bi-plus-circle"></i> Add New Task</h1>
  <form action="/tasks" method="POST" class="d-flex flex-column gap-3">
    <input type="text" name="title" class="form-control" placeholder="Task title" required>
    <textarea name="description" class="form-control" placeholder="Description" required></textarea>
    <input type="date" name="dueDate" class="form-control" required>
    <select name="category" class="form-select" required>
      <option value="Work">Work</option>
      <option value="Personal">Personal</option>
      <option value="Urgent">Urgent</option>
      <option value="Other" selected>Other</option>
    </select>
    <div class="d-flex gap-2">
      <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Add Task</button>
      <a href="/tasks" class="btn btn-secondary"><i class="bi bi-arrow-left-circle"></i> Back</a>
    </div>
  </form>
</div>

<%- include('partials/footer') %>
